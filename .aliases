alias dogup="docker-machine start default && eval \"\$(docker-machine env default)\""
alias dogdown="docker-machine stop default"
alias dogenv="eval \"\$(docker-machine env default)\""
alias cssh="tmux-cssh"
alias dockerPsClean="docker ps -a | grep 'Exited' | awk '{print $1}' | xargs  docker rm"
alias dockerUpdateAll="docker images | awk '{print \$1 \":\" \$2 }' | xargs -L1 docker pull"

dockerIp() {

    docker-machine ip default 2> /dev/null
}

dogEnvClean() {
    unset DOCKER_TLS_VERIFY
    unset DOCKER_CERT_PATH
    unset DOCKER_MACHINE_NAME
    unset DOCKER_HOST
}

setDockerIpInHosts() {
    SUCCESS=0;
    grep -q $(dockerIp) /etc/hosts;
    
    if [ $? -eq $SUCCESS ]; then
        echo "$(dockerIp) already in hosts file";
    else
        echo $(dockerIp) dockerhost | sudo tee -a /etc/hosts
    fi
}
